  string public constant name = "HavanaCoin";
  string public constant symbol = "HVC";
  uint256 public constant decimals = 10;
  uint256 public constant INITIAL_SUPPLY = 29000000 * (10 ** uint256(decimals));
  address public constant owner = 0xd7743F20E1A50EB34767bd0F90F119689c352338;

  function HavanaCoin() public {
    totalSupply = INITIAL_SUPPLY;
    balances[owner] = INITIAL_SUPPLY;
  }
}